<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <!-- we are creating this to give instructions to Spring Container -->
    <bean class="in.sp.beans.Student" id="StdId1">
        <!-- The above line creates an object of student -->
        <property name="name" value="Sanika"/>
        <property name="rollno" value="101"/>
        <property name="email" value="sanika@gmail.com"/>
    </bean>


     <bean class="in.sp.beans.Student" id="StdId2">
        <!-- The above line creates an object of student -->
        <property name="name" value="Samruddhi"/>
        <property name="rollno" value="102"/>
        <property name="email" value="samu@gmail.com"/>
    </bean>
   
    <!-- Now we need to activate the Spring Containers -->

</beans>
